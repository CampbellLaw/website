{
  "version": 2,
  "name": "crystallize-frontend-boilerplate",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/next"
    }
  ],
  "env": {
    "GTM_ID": "",
    "CRYSTALLIZE_GRAPH_URL_BASE": "https://graph.crystallize.com",
    "CRYSTALLIZE_TENANT_ID": "teddy-bear-shop",
    "SECRET": "secret",
    "STRIPE_SECRET_KEY": "@stripe-secret-key",
    "STRIPE_PUBLISHABLE_KEY": "@stripe-publishable-key"
  },
  "routes": [
    {
      "src": "/api/magic-link/([^/]+)",
      "dest": "/api/magic-link?email=$1"
    },
    {
      "src": "/api/verify/([^/]+)",
      "dest": "/api/verify?token=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/([^/].+)",
      "dest": "/static/$1"
    },
    {
      "src": "/_next/([^/].+)",
      "dest": "/_next/$1"
    },
    {
      "src": "/login",
      "dest": "/login"
    },
    {
      "src": "/checkout",
      "dest": "/checkout"
    },
    {
      "src": "/confirmation/([^/]+)",
      "dest": "/confirmation?id=$1"
    },
    {
      "src": "/([^/].+)",
      "dest": "/catalog?path=$1"
    }
  ]
}
