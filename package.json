{
  "name": "crystallize-frontend-template",
  "version": "1.3.0",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=9"
  },
  "repository": {
    "url": "git@github.com:snowballdigital/crystallize-frontend-template.git",
    "type": "git"
  },
  "scripts": {
    "precommit": "npm run validate",
    "dev": "node server/index.js",
    "build": "next build",
    "start": "NODE_ENV=production node server/index.js",
    "prod": "npm run build && npm run start",
    "test": "NODE_ENV=test jest",
    "lint": "eslint .",
    "validate": "npm-run-all test lint",
    "postinstall": "node postinstall"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "next/babel"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ]
      }
    },
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./"
          ],
          "alias": {
            "lib": "./lib",
            "page-components": "./page-components",
            "components": "./components",
            "cmp": "./components"
          }
        }
      ],
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "globals": {
      "__crystallizeConfig": true
    },
    "rules": {
      "camelcase": 0,
      "prettier/prettier": "error",
      "no-use-before-define": [
        "error",
        "nofunc"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "jest*.js",
            "__tests__/**/*.js"
          ]
        }
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "import/prefer-default-export": false,
      "jsx-a11y/anchor-is-valid": false,
      "react/jsx-filename-extension": false,
      "react/react-in-jsx-scope": false,
      "react/prop-types": "skipUndeclared",
      "react/forbid-prop-types": false,
      "react/require-default-props": false,
      "react/prefer-stateless-function": "ignorePureComponents"
    }
  },
  "eslintIgnore": [],
  "dependencies": {
    "@crystallize/express-basket": "^0.0.3",
    "@crystallize/react-basket": "^1.0.2",
    "@crystallize/react-image": "^1.1.1",
    "@crystallize/react-layout": "^1.3.1",
    "apollo-client-preset": "^1.0.5",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-styled-components": "^1.4.0",
    "dotenv": "^5.0.1",
    "es6-promise": "^4.2.2",
    "express": "^4.16.2",
    "graphql": "^0.12.3",
    "graphql-anywhere": "^4.1.0",
    "graphql-tag": "^2.6.1",
    "helmet": "^3.10.0",
    "isomorphic-fetch": "^2.2.1",
    "next": "^5.0.0",
    "polished": "^1.9.2",
    "prop-types": "^15.6.0",
    "react": "next",
    "react-apollo": "^2.0.4",
    "react-dom": "next",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "styled-components": "^3.2.1",
    "styled-is": "^1.1.2",
    "sw-precache-webpack-plugin": "^0.11.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "react-addons-test-utils": "^15.6.2"
  }
}
