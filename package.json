{
   "name": "crystallize-frontend-boilerplate",
   "version": "2.3.0",
   "private": true,
   "license": "ISC",
   "engines": {
      "node": ">=8.10"
   },
   "repository": {
      "url": "git@github.com:snowballdigital/crystallize-frontend-boilerplate.git",
      "type": "git"
   },
   "scripts": {
      "precommit": "yarn validate",
      "dev": "node server/index.js",
      "dev:inspect": "node --inspect-brk server/index.js",
      "build": "next build",
      "start": "NODE_ENV=production node server/index.js",
      "prod": "yarn build && yarn start",
      "test": "NODE_ENV=test jest",
      "lint": "eslint .",
      "validate": "yarn test && yarn lint-staged",
      "greet": "node .crystallize-greeting/"
   },
   "lint-staged": {
      "*.js": [
         "prettier --write",
         "eslint --fix",
         "git add"
      ]
   },
   "browserslist": [
      "> 1%",
      "last 2 versions"
   ],
   "babel": {
      "presets": [
         "next/babel"
      ],
      "env": {
         "test": {
            "presets": [
               [
                  "next/babel",
                  {
                     "preset-env": {
                        "modules": "commonjs"
                     }
                  }
               ]
            ]
         }
      },
      "plugins": [
         "@babel/plugin-transform-runtime",
         [
            "module-resolver",
            {
               "root": [
                  "./"
               ],
               "alias": {
                  "lib": "./lib",
                  "page-components": "./page-components",
                  "components": "./components",
                  "ui": "./ui"
               }
            }
         ],
         [
            "styled-components",
            {
               "displayName": true,
               "preprocess": false
            }
         ]
      ]
   },
   "prettier": {
      "singleQuote": true
   },
   "eslintConfig": {
      "extends": [
         "airbnb",
         "prettier"
      ],
      "plugins": [
         "prettier"
      ],
      "parser": "babel-eslint",
      "settings": {
         "import/resolver": {
            "babel-module": {}
         }
      },
      "env": {
         "es6": true,
         "browser": true,
         "node": true,
         "jest": true
      },
      "globals": {
         "__crystallizeConfig": true
      },
      "rules": {
         "camelcase": 0,
         "prettier/prettier": "error",
         "no-plusplus": 0,
         "no-use-before-define": [
            "error",
            "nofunc"
         ],
         "import/no-extraneous-dependencies": [
            "error",
            {
               "devDependencies": [
                  "jest*.js",
                  "__tests__/**/*.js"
               ]
            }
         ],
         "prefer-arrow-callback": [
            "error",
            {
               "allowNamedFunctions": true
            }
         ],
         "import/prefer-default-export": false,
         "jsx-a11y/anchor-is-valid": false,
         "react/jsx-filename-extension": false,
         "react/react-in-jsx-scope": false,
         "react/prop-types": "skipUndeclared",
         "react/forbid-prop-types": false,
         "react/require-default-props": false,
         "react/prefer-stateless-function": "ignorePureComponents"
      }
   },
   "eslintIgnore": [
      ".crystallize-greeting"
   ],
   "dependencies": {
      "@babel/core": "^7.1.0",
      "@babel/plugin-transform-runtime": "^7.1.0",
      "@crystallize/node-klarna": "^1.1.0",
      "@crystallize/react-basket": "^3.2.1",
      "@crystallize/react-image": "^2.0.0",
      "@crystallize/react-layout": "^1.7.1",
      "@crystallize/content-chunk": "^3.1.1",
      "apollo-boost": "^0.1.16",
      "babel-plugin-module-resolver": "^3.1.1",
      "babel-plugin-styled-components": "^1.7.1",
      "body-parser": "^1.18.3",
      "camelcase": "^5.0.0",
      "cross-fetch": "^2.2.1",
      "deep-assign": "^2.0.0",
      "dotenv": "^6.0.0",
      "express": "^4.16.3",
      "graphql": "^14.0.2",
      "graphql-tag": "^2.9.2",
      "helmet": "^3.13.0",
      "humps": "^2.0.1",
      "i18next": "^11.7.0",
      "isarray": "^2.0.4",
      "next": "^7.0.0",
      "ow": "^0.6.0",
      "polished": "^2.0.3",
      "prop-types": "^15.6.2",
      "react": "^16.5.2",
      "react-apollo": "^2.1.11",
      "react-dom": "^16.5.2",
      "react-i18next": "^7.11.1",
      "styled-components": "^4.0.0-beta.8",
      "styled-is": "^1.1.5",
      "upper-case-first": "^1.1.2"
   },
   "devDependencies": {
      "babel-core": "7.0.0-bridge.0",
      "babel-eslint": "^9.0.0",
      "babel-jest": "^23.6.0",
      "chalk": "^2.4.1",
      "enzyme": "^3.6.0",
      "enzyme-adapter-react-16": "^1.5.0",
      "eslint": "^5.5.0",
      "eslint-config-airbnb": "^17.1.0",
      "eslint-config-prettier": "^3.0.1",
      "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
      "eslint-plugin-import": "^2.14.0",
      "eslint-plugin-jsx-a11y": "^6.1.1",
      "eslint-plugin-prettier": "^2.6.2",
      "eslint-plugin-react": "^7.11.1",
      "husky": "^0.14.3",
      "inquirer": "^6.2.0",
      "jest": "^23.6.0",
      "lint-staged": "^7.2.2",
      "node-emoji": "^1.8.1",
      "prettier": "^1.14.2",
      "supports-color": "^5.3.0"
   }
}
